@model IEnumerable<Stand>

    @*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string color;
    string onlineCondition;
    int Tests_count_last_month = 0;
}

<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
       <div class="row">
            @{
                @* Group by project name *@
                @foreach (var standProject in Model.Select(g => g.Project).Distinct())
                {
                    <div class="row">
                        <a asp-controller=@standProject asp-action="Detail" asp-route-standsIdentifier=@standProject>
                            <h1 class="page-title">@standProject</h1>
                        </a>

                        @* Group by stand type *@
                        @foreach (var standType in Model.Where(p => p.Project==standProject).GroupBy(p => p.StandType))
                        {
                            <a asp-controller=@standType.FirstOrDefault().Project asp-action="Detail" asp-route-standsIdentifier=@standType.Key>
                                <div class="row">

                                    <h4 class="page-title">@standType.Key</h4>
                                    @foreach (var standObject in Model.Where(p => p.StandType == standType.Key))
                                    {
                                        <div class="col-xl-5 col-lg-6">
                                            <div class="card widget-flat div-hover">
                                                <a asp-controller=@standObject.Project asp-action="Detail" asp-route-standsIdentifier=@standObject.StandName>
                                                    <div class="card-body">
                                                        
                                                        @*@if (standObject.Connection_status == "OK")
                                                        {
                                                            color = "background-color:rgba(0,255,20,0.52)";
                                                            onlineCondition = "Online";
                                                        }
                                                        else
                                                        {
                                                            color = "background-color:rgba(255,0,20,0.52)";
                                                            onlineCondition = "Offline";
                                                        }
                                                        *@
                                                        @{
                                                        //color = (await Component.InvokeAsync("PingStand", new { ipAddress = standObject.IpAdress })).ToString();
                                                        color = "background-color:rgba(255,0,20,0.52)";
                                                        onlineCondition = "Offline";
                                                        }
                                                        <div class="float-end">
                                                            <i class="mdi mdi-account-multiple widget-icon" style=@color></i>
                                                        </div>
                                                        <h5 class="text-muted fw-normal mt-0" title="Number of Customers">@onlineCondition</h5>

                                                        <h3 class="mt-3 mb-3">@standObject.StandName</h3>
                                                        <p class="mb-0 text-muted">
                                                            <span class="text-success me-2"><i class="mdi mdi-arrow-up-bold"></i> @Tests_count_last_month</span>
                                                            <span class="text-nowrap">Tests last month</span>
                                                        </p>

                                                    </div>
                                                </a>
                                            </div> 
                                        </div>     
                                    }                               
                                </div>
                            </a>  
                        }
                    </div>
                }
            }   
        </div>
    </div>
</div>

