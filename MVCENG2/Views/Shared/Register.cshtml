@model RegisterModel



<div class="container-fluid col-6" style="margin-top: 110px;">
    <h1 class="text-center">Регистрация</h1>
    <div class="card">
        <div class="card-body">
            <h2>Отправка заявки на нового пользователя</h2>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>

                    <div class="form-floating" style="margin-bottom: 10px">
                        <input type="text" asp-for="Email" class="form-control" id="floatingPassword" placeholder="Введите email">
                        <label asp-for="Email">Введите email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="margin-bottom: 10px">
                        <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Введите пароль">
                        <label asp-for="Password">Введите пароль</label>
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-floating" style="margin-bottom: 10px">
                        <input asp-for="ConfirmPassword" class="form-control" id="floatingPassword" placeholder="Повторите пароль">
                        <label asp-for="ConfirmPassword">Повторите пароль</label>
                        <span asp-validation-for="ConfirmPassword" />
                    </div>

                    <div>

                    <div>
                        <input type="submit" value="Зарегистрироваться" class="btn btn-dark" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
