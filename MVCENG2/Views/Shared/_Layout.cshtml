<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HoffmanWebStatistic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app-saas.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HoffmanWebstatistic.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="navbar-custom topnav-navbar">
            <div class="container-fluid detached-nav">   
               
                <ul class="list-unstyled topbar-menu float-end mb-0">
                    

                    <li class="dropdown notification-list">
                        <a class="nav-link dropdown-toggle nav-user arrow-none me-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <span class="account-user-avatar">
                                <img src="..\logo\user_logo.jpg" alt="user-image" class="rounded-circle">
                            </span>
                            <span>
                                <span class="account-user-name">@ViewData["UserName"]</span>
                                <span class="account-position">@ViewData["UserRole"]</span>

                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated topbar-dropdown-menu profile-dropdown">

                            <a asp-controller="Account" asp-action="Logout"><div class=" dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Выйти</h6>
                                </div>
                            </a>
                            <a asp-controller="Account" asp-action="Register">
                                <div class=" dropdown-header noti-title">
                                    <h6 class="text-overflow m-0">Регистрация</h6>
                                </div>
                            </a>                           
                                                                                                                                             
                        </div>
                    </li>
                </ul>

                <div class="app-search dropdown">
                    <form method="post" asp-controller="Hoffman" asp-action="VINsReport">
                        <div class="input-group">
                            <input type="search" name="searchIdentifier" class="form-control dropdown-toggle" placeholder="Search..." id="top-search">
                            <span class="mdi mdi-magnify search-icon"></span>
                            <button class="input-group-text btn btn-primary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
            <div b-kgio8iatfz="" class="leftside-menu menuitem-active">

                <!-- Brand Logo Light -->
                <a b-kgio8iatfz="" asp-controller="Home" asp-action="Index" class="logo logo-light">
                    <span b-kgio8iatfz="" class="logo-lg">
                        <img b-kgio8iatfz="" src="..\logo\LogoHoffman.png" alt="logo">
                    </span>
                    <span b-kgio8iatfz="" class="logo-sm">
                        <img b-kgio8iatfz="" src="..\logo\LogoHoffman.png" alt="small logo">
                    </span>
                </a>
                <!-- Sidebar Hover Menu Toggle Button -->
                <div b-kgio8iatfz="" class="button-sm-hover" data-bs-toggle="tooltip" data-bs-placement="right" aria-label="Show Full Sidebar" data-bs-original-title="Show Full Sidebar">
                    <i b-kgio8iatfz="" class="ri-checkbox-blank-circle-line align-middle"></i>
                </div>

                <!-- Full Sidebar Menu Close Button -->
                <div b-kgio8iatfz="" class="button-close-fullsidebar">
                    <i b-kgio8iatfz="" class="ri-close-fill align-middle"></i>
                </div>

                <!-- Sidebar -left -->
                <div b-kgio8iatfz="" class="h-100 show" id="leftside-menu-container" data-simplebar="init">
                    <div b-kgio8iatfz="" class="simplebar-wrapper" style="margin: 0px;">
                        <div b-kgio8iatfz="" class="simplebar-height-auto-observer-wrapper"><div b-kgio8iatfz="" class="simplebar-height-auto-observer"></div></div><div b-kgio8iatfz="" class="simplebar-mask">
                            <div b-kgio8iatfz="" class="simplebar-offset" style="right: 0px; bottom: 0px;">
                                <div b-kgio8iatfz="" class="simplebar-content-wrapper" tabindex="0" role="region" aria-label="scrollable content" style="height: 100%; overflow: scroll hidden;">
                                    <div b-kgio8iatfz="" class="simplebar-content" style="padding: 0px;">
                                        <!-- Leftbar User -->
                                        <div b-kgio8iatfz="" class="leftbar-user">
                                            <a b-kgio8iatfz="" href="pages-profile.html">
                                                <img b-kgio8iatfz="" src="assets/images/users/avatar-1.jpg" alt="user-image" height="42" class="rounded-circle shadow-sm">
                                                <span b-kgio8iatfz="" class="leftbar-user-name mt-2">Dominic Keller</span>
                                            </a>
                                        </div>

                                        <!--- Sidemenu -->
                                        <ul b-kgio8iatfz="" class="side-nav">

                                            <li b-kgio8iatfz="" class="side-nav-title">Admin Panel</li>

                                            <li b-kgio8iatfz="" class="side-nav-item menuitem-active">

                                                <div b-kgio8iatfz="" class="collapse show" id="sidebarDashboards">
                                                    <ul b-kgio8iatfz="" class="side-nav-second-level">
                                                        <li b-kgio8iatfz="">
                                                            <a b-kgio8iatfz="" asp-controller="Stand" asp-action="MainMenu">Stands</a>
                                                        </li>
                                                        <li b-kgio8iatfz="" class="menuitem-active">
                                                            <a b-kgio8iatfz="" asp-controller="Operator" asp-action="MainMenu" class="active">Operators</a>
                                                        </li>
                                                        <li b-kgio8iatfz="" class="menuitem-active">
                                                            <a b-kgio8iatfz="" asp-controller="User" asp-action="MainMenu" class="active">Users</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </li>
                                        </ul>                                       
                                        <div b-kgio8iatfz="" class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        </div><div b-kgio8iatfz="" class="simplebar-placeholder" style="width: auto; height: 1183px;"></div>
                    </div><div b-kgio8iatfz="" class="simplebar-track simplebar-horizontal" style="visibility: visible;"><div b-kgio8iatfz="" class="simplebar-scrollbar" style="width: 32px; display: block; transform: translate3d(0px, 0px, 0px);"></div></div><div b-kgio8iatfz="" class="simplebar-track simplebar-vertical" style="visibility: hidden;"><div b-kgio8iatfz="" class="simplebar-scrollbar" style="height: 0px; transform: translate3d(0px, 0px, 0px); display: none;"></div></div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Разработчик: Биков Данир - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
