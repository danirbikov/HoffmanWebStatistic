@model HoffmanWebstatistic.Models.ViewModel.LoginModel



<div class="container-fluid col-5" style="margin-top: 110px;">
    <h1 class="text-center">Авторизация</h1>
    <div class="card">
        <div class="card-body">
            <h2>Вход на сайт</h2>
            <a asp-action="Register" asp-controller="Account">
                Регистрация
            </a>

            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                                 
                <div class="form-floating" style="margin-bottom: 10px">
                    <input type="text" asp-for="Email" class="form-control" id="floatingPassword" placeholder="Email">
                    <label asp-for="Email">Введите email</label>
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-floating" style="margin-bottom: 10px">
                    <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label asp-for="Password">Введите пароль</label>
                    <span asp-validation-for="Password" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-dark" />
                </div>                             
            </form>
            
        </div>
    </div>
</div>
