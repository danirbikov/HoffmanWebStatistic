@using HoffmanWebstatistic.Models.ViewModel;

@model MESViewModel

@{
    string confirmMessage = "Вы уверены, что хотите удалить XSD схему?";
    string confirmScript = "return confirm('" + confirmMessage + "');";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">XSD схемы</h1>
    <div class="card mb-4">
        <div class="card-body">
            <div class="content"> 
                <div class="row">
                <div class="card-header">
                    <a asp-action="AddXsdSchema">
                        <button type="submit" class="btn btn-primary float-end">Добавить XSD схему</button>
                    </a>
                </div>
                </div>
                <div class="row">
                        @foreach (var xsdSchema in Model.xsdSchemas)
                        {
                            <div class="col-xl-6 col-lg-6">
                                <div class="card widget-flat div-hover">
                                    <div class="card-body">
                                    <a asp-action="EditXSDSchema" asp-route-xsdSchemaId=@xsdSchema.Id>
                                        <button class="btn btn-primary fa-solid fa-pen float-end"></button>
                                    </a>
                                    <a asp-action="DeleteXSDSchema" asp-route-xsdSchemaId=@xsdSchema.Id>
                                        <button class="btn btn-danger fa-solid fa-trash float-end" onclick="@confirmScript"></button>
                                    </a>
                                    <h2 class="mt-3 mb-3">@xsdSchema.Purpose.XsdPurpose</h2>
                                        <h5 class="mb-0 text-muted">Xsd description: @xsdSchema.XsdDescription</h5>
                                        <h5 class="mb-0 text-muted">Date: @xsdSchema.Created</h5>

                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            
        </div>
    </div>
</div>
