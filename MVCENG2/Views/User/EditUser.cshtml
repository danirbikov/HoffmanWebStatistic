@model User



<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Редактирование пользователя: @Model.ULogin</h1>
    <div class="card mb-4">
        <div class="card-body">
            <form method="post" asp-action="EditUser">
                <div class="mb-2">
                    <label asp-for="ULogin">Логин</label>
                    <input asp-for="ULogin" class="form-control" placeholder="login" value=@Model.ULogin>
                    <span asp-validation-for="ULogin" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="UPassword">Пароль</label>
                    <input asp-for="UPassword" class="form-control" placeholder="password" value=@Model.UPassword>
                    <span asp-validation-for="UPassword" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="RoleId">Роль</label>
                    <select class="form-select" multiple aria-label="multiple select example" asp-for="RoleId">

                        @if (ViewData["UserRole"].ToString() == "sa")
                        {
                            <option value=1>sa </option>
                        }
                        <option value=2>admin</option>
                        <option value=3>user</option>
                        <option value=4>viewer</option>
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" value=@Model.Id>
                <input type="hidden" asp-for="InactiveMark" value=@Model.InactiveMark>
                <input type="hidden" asp-for="Created" value=@Model.Created>

                <button type="submit" class="btn btn-primary">Сохранить</button>
            </form>

        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('#roleSelect').val(@Model.Role.RName); 
    });
</script>