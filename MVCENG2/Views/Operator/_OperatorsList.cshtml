@model List<Operator>

@{
    string confirmMessage = "Вы уверены, что хотите удалить оператора?";
    string confirmScript = "return confirm('" + confirmMessage + "');";
}


@foreach (Operator operatorInfo in Model)
{
    <tr>
        <td>
            @operatorInfo.OLogin
        </td>
        <td>@operatorInfo.OPassword</td>

        <td>
            @operatorInfo.ODescription
        </td>

        <td>
            <span class="text-success fw-semibold">@operatorInfo.Created</span>
        </td>
        <td>

            <a asp-action="EditOperator" asp-route-operatorID=@operatorInfo.Id class="btn btn-primary fa-solid fa-pen"></a>
            <a asp-action="UnactiveOperator" asp-route-operatorID=@operatorInfo.Id class="btn btn-danger fa-solid fa-trash" onclick="@confirmScript"></a>
        </td>

    </tr>
}





