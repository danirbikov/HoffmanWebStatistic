@using MVCENG2.Models.ViewModel;
@using MVCENG2.ComfortModules

@model List<Operator>



<div class="row">
    <div class="col-xxl-6">
        <div class="card" style="width: 800px;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="header-title mb-0">Operators list</h4>
                <a asp-action="AddOperator" class="btn btn-sm btn-light">
                    <span class="mdi mdi-plus"></span>
                    
                </a>
            </div>
            
            <div class="card-body pt-0">
                <div class="table-responsive">
                    <table class="table table-centered table-nowrap table-hover mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Login</th>
                                <th scope="col">Password</th>
                                <th scope="col">Description</th>
                                <th scope="col">Created</th>
                                <th scope="col" class="text-end">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Operator operatorInfo in Model)
                            {
                                <tr>
                                    <td>
                                        @operatorInfo.OLogin
                                    </td>
                                    <td>@operatorInfo.OPassword</td>
                                    
                                    <td>
                                        @operatorInfo.ODescription
                                    </td>
                                    
                                    <td>
                                        <span class="text-success fw-semibold">@operatorInfo.Created</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="EditOperator" asp-route-operatorID=@operatorInfo.Id class="font-18 text-info me-2" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="Edit" data-bs-original-title="Edit">
                                            <i class="uil uil-pen">
                                                Edit
                                            </i>
                                        </a>
                                        <a asp-action="UnactiveOperator" asp-route-operatorID=@operatorInfo.Id class="font-18 text-danger" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="Delete" data-bs-original-title="Delete">
                                            <i class="uil uil-trash">
                                                Del
                                            </i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
   