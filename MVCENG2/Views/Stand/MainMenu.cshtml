@using HoffmanWebstatistic.Models.ViewModel;
@using HoffmanWebstatistic.ComfortModules

@model List<StandsForAdminPanelView>

@{
    string confirmMessage = "Вы уверены, что хотите удалить стенд?";
    string confirmScript = "return confirm('" + confirmMessage + "');";
}


<div class="row">
    <div class="col-xxl-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="header-title mb-0">Stands list</h4>
                <a asp-action="AddStand">
                    <button type="submit" class="btn btn-primary">Add stand</button>
                </a>

            </div>
            <div class="card-body pt-0">
                <div class="table-responsive">
                    <table class="table table-centered table-nowrap table-hover mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Stand name</th>
                                <th scope="col">Last test date</th>
                                <th scope="col">Status</th>
                                <th scope="col">JSON count</th>
                                <th scope="col" class="text-end">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            
                            @foreach (StandsForAdminPanelView standsInfo in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                            </div>
                                            <div class="flex-grow-1 ms-2">                                           
                                                    @standsInfo.stand.StandName                                           
                                            </div>
                                        </div>
                                    </td>
                                    <td><i class="uil uil-calender me-1"></i>@standsInfo.lastTestDate</td>
                                    @if (standsInfo.pingResult)
                                    {
                                        <td>
                                            <span class="badge bg-success-lighten text-success">Online</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="badge bg-danger-lighten text-danger">Offline</span>
                                        </td>
                                    }                                                                      
                                    <td>
                                        <span class="text-success fw-semibold">@standsInfo.allTestsCount</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="EditStand" asp-route-standID=@standsInfo.stand.Id class="font-18 text-info me-2" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="Edit" data-bs-original-title="Edit">
                                            <i class="btn btn-primary">
                                                Edit
                                            </i>
                                        </a>
                                        <a onclick="@confirmScript" asp-action="UnactiveStand" asp-route-standID=@standsInfo.stand.Id class="font-18 text-danger" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="Delete" data-bs-original-title="Delete">
                                            <i class="btn btn-danger">
                                                Del
                                            </i>
                                        </a>
                                    </td>

                                </tr> 
                            }                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>
   