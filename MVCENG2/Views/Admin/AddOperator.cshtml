<form method="post" asp-action="AddOperator">
    <div class="form-group">
        <label asp-for="OLogin">Login</label>
        <input asp-for="OLogin" class="form-control" placeholder="login">
        <span asp-validation-for="OLogin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OPassword">Password</label>
        <input asp-for="OPassword" class="form-control" placeholder="password">
        <span asp-validation-for="OPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ODescription">Description</label>
        <input asp-for="ODescription" class="form-control" placeholder="Малютка Борис">
        <span asp-validation-for="ODescription" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    
</form>
