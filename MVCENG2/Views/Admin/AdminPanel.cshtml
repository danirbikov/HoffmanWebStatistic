@using MVCENG2.Models.ViewModel;
@using MVCENG2.ComfortModules

@model Dictionary<List<StandsForAdminPanelView>, List<Operator>>



<div class="row">
    <div class="col-xxl-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="header-title mb-0">Stands list</h4>
                <a asp-action="AddStand" class="btn btn-sm btn-light">
                    <span class="mdi mdi-plus"></span>
                </a>

            </div>
            <div class="card-body pt-0">
                <div class="table-responsive">
                    <table class="table table-centered table-nowrap table-hover mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Stand name</th>
                                <th scope="col">Last test date</th>
                                <th scope="col">Status</th>
                                <th scope="col">All Tests</th>

                            </tr>
                        </thead>
                        <tbody>
                            
                            @foreach (StandsForAdminPanelView standsInfo in Model.FirstOrDefault().Key)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                            </div>
                                            <div class="flex-grow-1 ms-2">                                           
                                                    @standsInfo.standName                                           
                                            </div>
                                        </div>
                                    </td>
                                    <td><i class="uil uil-calender me-1"></i>@standsInfo.lastTestDate</td>
                                    @if (standsInfo.pingResult)
                                    {
                                        <td>
                                            <span class="badge bg-success-lighten text-success">Online</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="badge bg-danger-lighten text-danger">Offline</span>
                                        </td>
                                    }                                                                      
                                    <td>
                                        <span class="text-success fw-semibold">@standsInfo.allTestsCount</span>
                                    </td>

                                </tr> 
                            }                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 

    @*Operators*@
    <div class="col-xxl-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="header-title mb-0">Operators list</h4>
                <a asp-action="AddOperator" class="btn btn-sm btn-light">
                    <span class="mdi mdi-plus"></span>
                    
                </a>
            </div>
            
            <div class="card-body pt-0">
                <div class="table-responsive">
                    <table class="table table-centered table-nowrap table-hover mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Login</th>
                                <th scope="col">Password</th>
                                <th scope="col">Description</th>
                                <th scope="col">Created</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Operator operatorInfo in Model.FirstOrDefault().Value)
                            {
                                <tr>
                                    <td>
                                        @operatorInfo.OLogin
                                    </td>
                                    <td>@operatorInfo.OPassword</td>
                                    
                                    <td>
                                        @operatorInfo.ODescription
                                    </td>
                                    
                                    <td>
                                        <span class="text-success fw-semibold">@operatorInfo.Created</span>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
   